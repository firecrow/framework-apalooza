{
  "name": "framework-apaloza",
  "type": "module",
  "version": "1.0.0",
  "dependencies": {
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "svelte": "^4.2.17",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0"
  },
  "scripts": {
    "clean": "rm -Rf dist/* rm -Rf pre-dist/*",
    "build-react": "tsc -p react.tsconfig.json",
    "webpack-react":"webpack --mode production && cp pre-dist/react-app.js dist/",
    "build-svelte": "vite build && cp pre-dist/svelte-app.umd.js dist/svelte-app.js",
    "build-apps": "npm run build-react && npm run webpack-react && npm run build-svelte",
    "copy-static": "cp -v src/*.html dist/ && cp -v src/*.css dist/",
    "build": "npm run build-apps && npm run copy-static"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "webpack-cli": "^5.1.4"
  }
}
